{
  "login_page_title": {
    "locator": {
      "xpath": "//Text[@Name='Sign in to your account']"
    }
  },

  "email_input": {
    "locator": {
      "id": "loginEmailInput",
      "xpath": [
        "//Edit[@Name='Email']",
        "//Edit[@AutomationId='email']"
      ]
    }
  },

  "password_input": {
    "locator": {
      "id": "loginPasswordInput",
      "xpath": [
        "//Edit[@Name='Password']",
        "//Edit[@AutomationId='password']"
      ]
    }
  },

  "show_password_icon": {
    "locator": {
      "xpath": "//Button[@Name='Show password']"
    }
  },

  "login_submit_btn": {
    "locator": {
      "id": "loginSubmitButton",
      "xpath": [
        "//Button[@Name='Sign in']",
        "//Button[@Name='Login']"
      ]
    }
  },

  "forgot_password_link": {
    "locator": {
      "xpath": "//HyperLink[@Name='Forgot password?']"
    }
  },

  "create_account_link": {
    "locator": {
      "xpath": [
        "//HyperLink[@Name='Create account']",
        "//Text[@Name='Create an account']"
      ]
    }
  },

  "remember_me_checkbox": {
    "locator": {
      "xpath": "//CheckBox[@Name='Remember me']"
    }
  },

  "login_error_message": {
    "locator": {
      "xpath": "//Text[contains(@Name,'incorrect') or contains(@Name,'Invalid')]"
    }
  },

  "login_success_indicator": {
    "locator": {
      "xpath": "//Text[@Name='Welcome back']"
    }
  },

  "close_login_btn": {
    "locator": {
      "xpath": "//Button[@Name='Close']"
    }
  }
}
