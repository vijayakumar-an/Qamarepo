{
  "notifications_icon": {
    "locator": {
      "id": "notificationsIcon",
      "xpath": "//Button[@Name='Notifications']"
    }
  },

  "notifications_panel": {
    "locator": {
      "xpath": [
        "//Group[contains(@ClassName,'notification-panel--open')]",
        "//Group[@AutomationId='Notifications.Panel']"
      ]
    }
  },

  "notifications_title": {
    "locator": {
      "xpath": "//Text[@Name='Notifications']"
    }
  },

  "notification_item": {
    "locator": {
      "xpath": "//ListItem[contains(@ClassName,'notification-item')]"
    }
  },

  "notification_unread_badge": {
    "locator": {
      "xpath": "//Text[contains(@ClassName,'unread-badge')]"
    }
  },

  "notification_order_update": {
    "locator": {
      "xpath": "//Text[contains(@Name,'Order')]"
    }
  },

  "notification_delivery_update": {
    "locator": {
      "xpath": "//Text[contains(@Name,'Delivered')]"
    }
  },

  "notification_offer": {
    "locator": {
      "xpath": "//Text[contains(@Name,'Offer') or contains(@Name,'Discount')]"
    }
  },

  "notification_system_message": {
    "locator": {
      "xpath": "//Text[contains(@Name,'system') or contains(@Name,'update')]"
    }
  },

  "mark_all_as_read_btn": {
    "locator": {
      "xpath": "//Button[@Name='Mark all as read']"
    }
  },

  "clear_all_notifications_btn": {
    "locator": {
      "xpath": "//Button[@Name='Clear all']"
    }
  },

  "notification_timestamp": {
    "locator": {
      "xpath": "//Text[contains(@ClassName,'notification-time')]"
    }
  },

  "close_notifications_panel_btn": {
    "locator": {
      "xpath": "//Button[@Name='Close notifications']"
    }
  },

  "empty_notifications_message": {
    "locator": {
      "xpath": "//Text[@Name='No new notifications']"
    }
  }
}
